	},
	"license": "AGPLv3",
	"siaVersion": "1.5.8-rc1",
	"private": true,
	"scripts": {
		"lint": "vue-cli-service lint",
		"build": "vue-cli-service electron:build",
		"serve": "vue-cli-service electron:serve",
